{
  "name": "trakt.tv",
  "productName": "Trakt.tv",
  "version": "1.0.0",
  "description": "A Trakt.tv Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:macos": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/macos.icns --app-bundle-id=digital.twisted.trakt --prune=true --out=builds --osx-sign.type=distribution",
    "build:win64": "electron-packager . --overwrite --platform=win32 --arch=x64 --icon=assets/icons/windows.ico --app-bundle-id=digital.twisted.trakt --prune=true --out=builds",
    "build:win32": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/windows.ico --app-bundle-id=digital.twisted.trakt --prune=true --out=builds",
    "build": "npm run build:macos && npm run build:win64 && npm run build:win32"
  },
  "repository": "https://github.com/tombonez/trakt",
  "author": "Tom Taylor",
  "license": "MIT",
  "devDependencies": {
    "electron": "~1.6.2",
    "electron-packager": "^9.0.1"
  },
  "dependencies": {
    "electron-osx-sign": "^0.4.7",
    "electron-window-state": "^4.1.1"
  }
}
